                android:layout_width="60dp"
                android:layout_height="20dp"
                android:text="2 -"

                android:layout_marginRight="30dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="The Sun"

                style="?android:listSeparatorTextViewStyle"

                />
            <TextView
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:text="3 - Two"

                android:layout_marginRight="30dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Swooping"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Owls"


                style="?android:listSeparatorTextViewStyle"

                />
            <TextView
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:text="4 - One"

                android:layout_marginRight="30dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Monkey"

                style="?android:listSeparatorTextViewStyle"

                />
            <TextView
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:text="5 - Five"

                android:layout_marginRight="30dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Ants"

                style="?android:listSeparatorTextViewStyle"

                />
            />
            <TextView
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:text="6 - One"

                android:layout_marginRight="30dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Caterpillar"

                style="?android:listSeparatorTextViewStyle"

                />

            <TextView
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:text="7 - One"

                android:layout_marginRight="30dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Butterfly"



                />
            <TextView
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:text="8 - Two"

                android:layout_marginRight="30dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Cats"

                style="?android:listSeparatorTextViewStyle"

                />
            <TextView
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:text="9 - One"

                android:layout_marginRight="30dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
