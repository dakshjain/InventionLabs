            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Flowers"

                style="?android:listSeparatorTextViewStyle"

                />
            <TextView
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:text="11 - One"

                android:layout_marginRight="30dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="Book"
                style="?android:listSeparatorTextViewStyle"


                />
